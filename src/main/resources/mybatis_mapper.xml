<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.nrcynet.dao.mapper.CoreMapper">

    <select id="selectRoomByFloorAndNum" resultType="top.nrcynet.dao.bean.Room">
        select * from hotel.room where floor=#{floor} and num=#{num}
    </select>

    <select id="selectExistRoomByType" resultType="top.nrcynet.dao.bean.Room">
        select * from hotel.room where status=0 and type=#{type}
    </select>
    <update id="setRoomStatusByFloorAndNum">
        update hotel.room set status=#{status} where floor=#{floor} and num=#{num}
    </update>


<!--user-->
    <select id="selectUserByName" resultType="top.nrcynet.dao.bean.User">
        select * from hotel.user where name=#{name}
    </select>
    <update id="updateUserConsumptionByName">
        update hotel.user set consumption=#{consumption} where name=#{name}
    </update>
    <insert id="register">
        insert into hotel.user (name,password,is_evaluate,consumption) values(#{name},#{password},'y',0)
    </insert>
    <select id="login" resultType="top.nrcynet.dao.bean.User">
        select * from hotel.user where name=#{name} and password=#{password}
    </select>
    <update id="updateUserPasswordByName">
        update hotel.user set password=#{password} where name=#{name}
    </update>

<!--    cache-->
    <insert id="insert">
        insert into hotel.cache (name,breakfast,room_id,price) values(#{name},#{breakfast},#{roomId},#{price})
    </insert>
    <delete id="delete">
        delete from hotel.cache where name=#{name}
    </delete>
    <select id="selectCacheByName" resultType="top.nrcynet.dao.bean.Cache">
        select * from hotel.cache where name=#{name}
    </select>

</mapper>